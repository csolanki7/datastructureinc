#include<stdio.h>
#include<ctype.h>

int main (void ) {
	
	int n; 
	
	printf("Enter a positive integer: ");
    
	scanf("%d", &n);
    
	printf("Factorial of %d = %ld", n , recursivefact(n));
    
	return 0;
	
}


int recursivefact(int n) {
	
	
	if ( n>=1 ) 
		
		return ( n * recursivefact(n-1) );
	 
     else 
	 
	  return 1;
	  
}
